@model App.ViewModels.RaceDetailsViewModel

@{
    ViewData["Title"] = "DetailsRace";
}

<h1>@Model.Course.Name</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Race Name
            </th>
            <th>
                Date
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                @Model.Course.Id
            </td>
            <td>
                @Model.Course.Name
            </td>
            <td>
                @Model.Course.EventDate.ToShortDateString()
            </td>
            <td>
                <a asp-controller="Races" asp-action="Edit" asp-route-id="@Model.Course.Id">Edit race</a> |
                <a asp-controller="Races" asp-action="Delete" asp-route-id="@Model.Course.Id" onclick="return confirm('Are you sure you want to delete this?')">Delete</a>
            </td>
        </tr>
    </tbody>
</table>